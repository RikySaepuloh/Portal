<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
<!--        <RelativeLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content">-->
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:contentDescription="back"/>
<!--        </RelativeLayout>-->
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="30sp"
                    android:text="Masuk"/>
                <LinearLayout
                    android:id="@+id/card_keperluan"
                    android:layout_width="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:layout_height="75dp"
                    android:paddingLeft="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/n1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/n1_true"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Keperluan"
                            android:textColor="@android:color/darker_gray"/>
                        <TextView
                            android:id="@+id/tv_keperluan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_tujuan"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"

                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">
                    <ImageView
                        android:id="@+id/n2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/n2_false"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tujuan"
                            android:textColor="@android:color/darker_gray"/>
                        <TextView
                            android:id="@+id/tv_tujuan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_penghuni"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"

                    android:orientation="horizontal"
                    android:paddingLeft="20dp">
                    <ImageView
                        android:id="@+id/n3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/n3_false"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Penghuni"
                            android:textColor="@android:color/darker_gray"/>
                        <TextView
                            android:id="@+id/tv_penghuni"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_identitas"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:id="@+id/n4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/n4_false"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Identitas"
                            android:textColor="@android:color/darker_gray" />

                        <ImageView
                            android:id="@+id/identitas"
                            android:layout_marginLeft="-10dp"
                            android:layout_width="125dp"
                            android:layout_height="75dp"/>
<!--                        <TextView-->
<!--                            android:id="@+id/identitas"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="-" />-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:background="@drawable/layout_content_background"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>